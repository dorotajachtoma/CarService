STWORZENIE TABELI EMPLOYEE :
create table employee(
id int auto_increment,
name varchar(255),
surname varchar(255),
address varchar(255),
phone_number varchar(255),
note varchar(255),
cost_by_hour decimal(10,2),
primary key (id)
);
STWORZENIE TABELI CUSTOMER :
create table customer(
id int auto_increment,
name varchar(255),
surname varchar(255),
date_of_birth date,
primary key (id)
);
STWORZENIE TABELI VEHICLE:
create table vehicle(
vehicle_id int auto_increment,
model varchar(355),
brand varchar(255),
year_of_production varchar(10),
number_plate varchar(255),
date_next_service date,
customer_id int,
primary key (vehicle_id),
foreign key (customer_id)
 references customer(id)
);
STWORZENIE TABELI ORDERS :
create table orders(
order_id int auto_increment,
accepted_to_repair date,
planned_date_of_repair date,
date_of_repair date,
employee_id int,
description_of_problem varchar(500),
description_of_repair varchar(500),
vehicle_id int,
cost_of_repair decimal(10,2),
cost_of_car_parts decimal(10,2),
cost_of_employee decimal(10,2),
quantity_of_hours int,
primary key (order_id),
foreign key (vehicle_id)
references vehicle(vehicle_id)
);
STWORZENIE TABELI STATUS:
create table status(
id int auto_increment,
description varchar(255)
);
